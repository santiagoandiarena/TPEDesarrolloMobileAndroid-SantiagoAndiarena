<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/orderby"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black" />

        <Spinner
            android:id="@+id/spinnerOrdering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"/>

        <!-- Sección Plataformas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/platforms"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:textColor="@android:color/black" />

        <!-- RecyclerView de plataformas con altura aumentada -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPlatforms"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white" />

        <!-- Sección Géneros -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/genres"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:textColor="@android:color/black" />

        <!-- RecyclerView de géneros con altura aumentada -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerGenres"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginBottom="24dp"
            android:background="@android:color/white" />

        <!-- Botones con menos margen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/buttonClear"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/clear"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/light_gray" />

            <Button
                android:id="@+id/buttonApply"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/apply"
                android:backgroundTint="@color/primary_color"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!--ProgressBar y mensajes de error -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/error_loading_filters"
            android:visibility="gone"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/buttonRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/retry"
            android:visibility="gone"
            android:textColor="@android:color/black" />

    </LinearLayout>

</ScrollView>